<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" /> <!-- Shadow color (semi-transparent black) -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" /> <!-- Offset for shadow -->
        </shape>
    </item>
    <!-- Main Card Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background for the card -->
            <corners android:radius="16dp" /> <!-- Match the shadow's rounded corners -->
        </shape>
    </item>
</layer-list>